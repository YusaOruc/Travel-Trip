@model TravelTripProje.Models.Siniflar.BlogYorum

<div class="recent">
    <h3>Son Bloglar</h3>
    @foreach (var y in Model.Deger3)
    {
        <ul>
            <li><a href="/Blog/BlogDetay/@y.ID">@y.Baslik</a></li>

        </ul>
        
    }
    
</div>
<div class="comments">
    <h3>Son Yorumlar</h3>
    @foreach (var z in Model.Deger2)
    {
        <ul>
            <li><a href="/Blog/BlogDetay/@z.ID">@z.KullaniciAdi </a> : <a href="#">@z.Yorum.Substring(0, 15)</a></li>

        </ul>

    }

</div>